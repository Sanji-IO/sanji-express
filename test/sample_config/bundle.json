{
  "name": "nexthop",
  "version": "1.0",
  "author": "ChinFu.Yang",
  "email": "ChinFu.Yang@moxa.com",
  "description": "This is a nexthop model.",
  "license": "MOXA",
  "main": "nexthop.py",
  "argument": "",
  "priority": 90,
  "retry": 3,
  "retryInterval": 500,
  "hook": [
    "ethernet",
    "wireless"
  ],
  "dependencies": {
    "ethernet": "~1.0",
    "web": "~1.0"
  },
  "repository": {
    "type": "git",
    "url": "your git url"
  },
  "resources": [
    {
      "resource": "/system/time"
    },
    {
      "methods": "get",
      "resource": "/i/want/to/download/file1",
      "file": {
        "downloadFile": {
          "path": "downloads",
          "filename": "file1"
        }
      }
    },
    {
      "methods": "get",
      "resource": "/i/want/to/download/:filename",
      "file": {
        "downloadFile": {
          "path": "downloads"
        }
      }
    },
    {
      "methods": "delete",
      "resource": "/i/want/to/delete/named/test",
      "file": {
        "deleteFile": {
          "path": "deletes",
          "filename": "test"
        }
      }
    },
    {
      "methods": "delete",
      "resource": "/i/want/to/delete/:filename",
      "file": {
        "deleteFile": {
          "path": "deletes"
        }
      }
    },
    {
      "methods": [
        "put",
        "get"
      ],
      "resource": "/network/cellular/:id",
      "file": {
        "uploadFile": {
          "index": false,
          "allowedFiles": [
            "firmware.zip",
            "key.pub"
          ],
          "path": "uploads"
        }
      }
    },
    {
      "methods": "post",
      "resource": "/network/cellular",
      "file": {
        "uploadFile": {
          "path": "uploads"
        }
      }
    },
    {
      "methods": "post",
      "resource": "/remote/gateway/upload",
      "file": {
        "uploadFile": {
          "createPublicLink": true,
          "path": "uploads"
        }
      }
    }
  ]
}
